      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <possessionCount>1</possessionCount>
	<costList>
	<WoodLog>20</WoodLog>
	</costList>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
		<li>TribalBench</li>
		<li>ElectricSmithy</li>
		<li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <statBases>
		<WorkToMake>1900</WorkToMake>
		<MaxHitPoints>75</MaxHitPoints>
		<StuffEffectMultiplierArmor>4.5</StuffEffectMultiplierArmor>
		<Mass>4</Mass>
		<Bulk>6</Bulk>
		<WornBulk>4</WornBulk>
		<ArmorRating_Blunt>2.5</ArmorRating_Blunt>
		<ArmorRating_Sharp>3.6</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <ReloadSpeed>-0.3</ReloadSpeed>
      <MeleeHitChance>-2</MeleeHitChance>
      <ShootingAccuracyPawn>-0.2</ShootingAccuracyPawn>
      <AimingAccuracy>-0.2</AimingAccuracy>
      <Suppressability>-0.5</Suppressability>
      <MeleeCritChance>-0.1</MeleeCritChance>
      <MeleeParryChance>0.5</MeleeParryChance>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>TribalShield</li>
      </tags>
	<renderNodeProperties>
	<li>
		<nodeClass>CombatExtended.PawnRenderNode_Apparel</nodeClass>
		<workerClass>CombatExtended.PawnRenderNodeWorker_Drafted</workerClass>
		<texPath>Things/Pawn/Humanlike/Apparel/Shield/Neolithic/Wooden_Shield/Wooden_Shield</texPath>
		<shaderTypeDef>CutoutComplex</shaderTypeDef>
		<parentTagDef>ApparelBody</parentTagDef>
		<drawData>
			<scale>0.45</scale>
			<defaultData>
				<layer>80</layer>
			</defaultData>
			<dataEast>
				<layer>-5</layer>
				<offset>(0, 0, -0.1)</offset>						
			</dataEast>
			<dataNorth>
				<layer>-5</layer>
				<offset>(0.15, 0, -0.1)</offset>
			</dataNorth>
			<dataSouth>
				<offset>(0.3, 0, -0.2)</offset>
			</dataSouth>
		</drawData>
		</li>
	</renderNodeProperties>	  
    </apparel>
    <modExtensions>
      <li Class="CombatExtended.ShieldDefExtension">
        <shieldCoverage>
          <li>Hands</li>
          <li>Arms</li>
          <li>Shoulders</li>
          <li>Torso</li>
        </shieldCoverage>
        <crouchCoverage>
          <li>Neck</li>
          <li>FullHead</li>		
          <li>Legs</li>
        </crouchCoverage>
    <!--    <drawAsTall>true</drawAsTall> -->
      </li>
    </modExtensions>
    <tradeTags>
      <li>Armor</li>
    </tradeTags>
