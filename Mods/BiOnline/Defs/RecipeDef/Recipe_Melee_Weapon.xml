  <!--Мономеч-->
  <RecipeDef>
    <defName>Craft_MeleeWeapon_MonoSword</defName>
    <label>Forge MeleeWeapon MonoSword</label>
    <description>To forge a MonoSword, the best technologies and materials are used</description>
    <researchPrerequisite>Melee_TECH</researchPrerequisite>
    <jobString>Forge MeleeWeapon MonoSword.</jobString>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>30000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <recipeUsers>
      <li>FabricationBench</li>
    </recipeUsers>
    <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>Titanium</li>
                </thingDefs>
            </filter>
            <count>20</count>
        </li>
		<li>
            <filter>
                <thingDefs>
                    <li>AlloysCeramite</li>
                </thingDefs>
            </filter>
            <count>50</count>
        </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AlloysCeramite</li>
		<li>Titanium</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MeleeWeapon_MonoSword>1</MeleeWeapon_MonoSword>
	</products>
    <skillRequirements>
      <Crafting>16</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef> 
  
