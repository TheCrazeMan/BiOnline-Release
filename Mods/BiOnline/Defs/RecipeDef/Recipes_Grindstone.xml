<Defs>

	<!-- Мука из пшеницы -->

   <RecipeDef>
    <defName>WheatFlour_x25</defName>
    <label>Mill flour from wheat x25</label>
    <description>Mill wheat to the flour.</description>
    <researchPrerequisite>CookingII</researchPrerequisite>
    <jobString>Milling wheat</jobString>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <workAmount>600</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <recipeUsers>
      <li>Grindstone</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawWheat</li>
          </thingDefs>
        </filter>
        <count>500</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawWheat</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Flour>25</Flour>
	  <Hay>50</Hay>
    </products>
  </RecipeDef>

