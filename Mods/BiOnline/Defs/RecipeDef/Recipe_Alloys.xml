  <RecipeDef>
    <defName>BIO_MakeCharcoalx25</defName>
    <label>make charcoal х25</label>
    <description>Burn wood in order to obtain charcoal, it is not so good as mineral coal, but still a good replacement.</description>
    <jobString>Making Charcoal.</jobString>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>700</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<researchPrerequisite>Metal_processingI</researchPrerequisite>
    <recipeUsers>
	  <li>BiO_Smelter</li>
      <li>Campfire</li>
	  <li>Advanced_Smelter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <BIO_Coal>25</BIO_Coal>
    </products>
  </RecipeDef>


