<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>Healing_Elixir</defName>
    <label>Healing Elixir</label>
    <description>First aid potion. It is very well suited for pain relief and promotes rapid wound healing.</description>
    <graphicData>
      <texPath>Things/Item/Drug/Healing_Elixir</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <stackLimit>25</stackLimit>
	<tradeability>Sellable</tradeability>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>53</MarketValue>
      <Mass>0.1</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <joyKind>Chemical</joyKind>
      <joy>0.40</joy>
      <drugCategory>Medical</drugCategory>
      <foodType>Processed, Fluid</foodType>
      <baseIngestTicks>80</baseIngestTicks>
      <ingestSound>Ingest_Inject</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Inject {0}</ingestCommandString>
      <ingestReportString>Injecting {0}.</ingestReportString>
      <useEatingSpeedStat>false</useEatingSpeedStat>
      <chairSearchRadius>0</chairSearchRadius>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>HealingElixir</hediffDef>
          <severity>0.333</severity>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>ToxicBuildup</hediffDef>
          <severity>0.2</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>Potions</researchPrerequisite>
      <recipeUsers>
		<li>Brewery</li>
        <li>DrugLab</li>
      </recipeUsers>
      <soundWorking>Recipe_Drug</soundWorking>
    </recipeMaker>
    <costList>
      <TM_RawRedPetals>20</TM_RawRedPetals>
      <TM_AdvancedMedicine>4</TM_AdvancedMedicine>
      <Ethanol>1</Ethanol>
    </costList>
    <comps>
	   <li Class="CompProperties_Drug">
		<listOrder>1000</listOrder>
		<overdoseSeverityOffset>0</overdoseSeverityOffset>
	   </li>
    </comps>
  </ThingDef>
  
  <HediffDef>
    <defName>HealingElixir</defName>
    <label>healing elixir</label>
    <hediffClass>Hediff_High</hediffClass>
    <labelNoun>a healing elixir</labelNoun>
    <description>Healing elixir effect</description>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.70</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.50</offset>
          </li>
           <li>
            <capacity>Metabolism</capacity>
            <offset>0.50</offset>
          </li>
        </capMods>
        <statOffsets>
          <ImmunityGainSpeed>0.25</ImmunityGainSpeed>
          <InjuryHealingFactor>0.25</InjuryHealingFactor>
          <EatingSpeed>1.5</EatingSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
</Defs>