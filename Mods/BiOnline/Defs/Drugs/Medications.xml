<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="DrugPillBase">
		<defName>Medications</defName>
		<label>Medications</label>
		<description>A drug for the quick and effective treatment of severe wounds and illnesses. Taking this drug significantly reduces pain, allowing colonists to recover faster and return to their duties.</description>
		<possessionCount>10</possessionCount>
		<descriptionHyperlinks>
			<HediffDef>Medications_Effect</HediffDef>
		</descriptionHyperlinks>
		<graphicData>
			<texPath>Things/Item/Medicine/Medications</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<socialPropernessMatters>false</socialPropernessMatters>
		<rotatable>false</rotatable>
		<statBases>
			<WorkToMake>600</WorkToMake>
			<MarketValue>22</MarketValue>
			<Mass>0.005</Mass>
			<Flammability>0.7</Flammability>
		</statBases>
		<techLevel>Medieval</techLevel>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>Medications_Effect</hediffDef>
					<severity>1.0</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Drug">
				<listOrder>1000</listOrder>
				<overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
			</li>
		</comps>
	</ThingDef>
	<HediffDef>
		<defName>Medications_Effect</defName>
		<hediffClass>Hediff_High</hediffClass>
		<label>Medications effect</label>
		<description>Medication eases the pain, and speeds up kidney and bone marrow function.</description>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.18</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<painFactor>0.5</painFactor>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.30</offset>
					</li>
				</capMods>
				<statOffsets>
					<InjuryHealingFactor>0.20</InjuryHealingFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
</Defs> 