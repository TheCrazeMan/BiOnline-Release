<Defs>
	<!-- ##### Neolithic ##### -->
	<!-- +++++ Wooden Armor +++++ -->
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_WoodenArmor</defName>
		<label>wooden armor</label>
		<description>A vest with wooden logs and planks covering the front and back. Quite effective against small calibre gunshots and sharp melee weapons, but completely useless against blunt hits and rifle shots.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Body/Armor/Neolithic/WoodenArmor/WoodenArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<tradeability>Sellable</tradeability>
		<generateCommonality>1</generateCommonality>
		<costStuffCount>60</costStuffCount>
		<costList>
			<Cloth>30</Cloth>
		</costList>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<smeltable>false</smeltable>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkToMake>4200</WorkToMake>
			<Bulk>5</Bulk>
			<WornBulk>5</WornBulk>
			<Mass>12</Mass>
			<ArmorRating_Sharp>1.2</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<Insulation_Cold>1</Insulation_Cold>
			<Insulation_Heat>0</Insulation_Heat>
			<EquipDelay>1.3</EquipDelay>
		</statBases>
		<thingCategories Inherit='False'>
			<li>ApparelArmor</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Body/Armor/Neolithic/WoodenArmor/WoodenArmor</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>Neolithic</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>Neolithic_Apparel</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>CraftingSpot</li>
				<li>TribalBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.4,0.3,0.15)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>(0.6,0.45,0.18)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>(0.8,0.6,0.23)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	<!-- +++++ Stone War Mask +++++ -->
	<ThingDef ParentName="HatMakeableBase">
		<defName>Headgear_StoneWarMask</defName>
		<label>stone war mask</label>
		<description>An artistically terrifying war mask. Hides the wearer's face and makes them more confident. Being made out of stone, it is very durable but also incredibly heavy.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Head/Neolithic/StoneWarMask/StoneWarMask</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<tradeability>Sellable</tradeability>
		<generateCommonality>0.5</generateCommonality>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>4500</WorkToMake>
			<Bulk>6</Bulk>
			<WornBulk>1.5</WornBulk>
			<Mass>5.1</Mass>
			<StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
			<StuffEffectMultiplierArmor>2.5</StuffEffectMultiplierArmor>
			<ArmorRating_Heat>0.1</ArmorRating_Heat>
			<EquipDelay>1.2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<PainShockThreshold>0.10</PainShockThreshold>
			<MoveSpeed>-0.10</MoveSpeed>
			<Suppressability>-0.1</Suppressability>
			<AimingAccuracy>-0.2</AimingAccuracy>
			<MeleeHitChance>-1</MeleeHitChance>
		</equippedStatOffsets>
		<thingCategories Inherit='False'>
			<li>ArmorHeadgear</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Head/Neolithic/StoneWarMask/StoneWarMask</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Neolithic</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>Neolithic_Apparel</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>CraftingSpot</li>
				<li>TribalBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel"/>
	</ThingDef>
	
