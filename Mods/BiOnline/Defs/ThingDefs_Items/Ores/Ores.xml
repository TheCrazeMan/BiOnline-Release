<Defs>
	

	<ThingDef ParentName="RockBase">
		<defName>MineableCopperOre</defName>
		<label>Copper ore</label>
		<description>Copper ore rock.</description>
		<graphicData>
			<texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<colorTwo>(175,73,27)</colorTwo>
       		<color>(87,40,19)</color>
		</graphicData>
		<statBases>
			<MaxHitPoints>1250</MaxHitPoints>
		</statBases>
		<building>
			<isResourceRock>true</isResourceRock>
			<mineableThing>CopperOre</mineableThing>
			<mineableYield>45</mineableYield>
			<mineableScatterCommonality>1.3</mineableScatterCommonality>
			<mineableScatterLumpSizeRange>10~16</mineableScatterLumpSizeRange>
		</building>
		<comps>
            <li Class="BiOnline.Things.CompProperties_MineableProps"> <!-- Наш компонент -->
                <biomeSettings> <!-- Список настроек --> 
                    <!--
                        Учитываются все биомы, что есть в настройках. Разделение нужно для настройки модификатор.

                        В первом примере шанс и размер кластера умножаются на 10% (1.1)
                        Во втором примере просто указываются биомы без модификаторов
                        В третьем примере указан модификатор только для шанса
                    -->
                    <li>
                        <biomeDefs> <!-- список биомов, где может появится руда -->
                            <!--Холодные биомы-->
                            <li>BorealForest</li>
                            <li>Tundra</li>
                            <li>ColdBog</li>
                            <li>IceSheet</li>
                            <li>SeaIce</li>

                            <!--Нормальные биомы-->
                            <li>TemperateForest</li>
                            <li>TemperateSwamp</li>

                            <!--Тропические биомы-->
                            <li>TropicalSwamp</li>
                            <li>TropicalRainforest</li>
                            <!--Засушливые биомы-->
                            <li>Desert</li>
                            <li>ExtremeDesert</li>
                            <li>AridShrubland</li>
                        </biomeDefs>
                    </li>
                    <li>
                        <biomeDefs>
                            <li>TemperateForest</li>
                            <li>TemperateSwamp</li>
                        </biomeDefs>
                        <mineableScatterCommonalityMultiplier>1.33</mineableScatterCommonalityMultiplier>
                        <mineableScatterLumpSizeRangeMultiplier>1.25</mineableScatterLumpSizeRangeMultiplier>

                    </li>

                </biomeSettings>
            </li>
        </comps>
	</ThingDef>
	
