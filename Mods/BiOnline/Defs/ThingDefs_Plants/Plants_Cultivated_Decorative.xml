<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--Лаванда-->
	<ThingDef ParentName="PlantBase">
		<defName>Plant_Lavender</defName>
		<label>Lavender</label>
		<description>Everyone from the rimworlds to the hyper-tech glitterworlds know about this charming flower. Every place with growing lavender near become hundred times better.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
			<BeautyOutdoors>4</BeautyOutdoors>
			<Nutrition>0.25</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Lavender</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.6~1.2</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildClusterRadius>1</wildClusterRadius>
			<wildClusterWeight>1</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>

</Defs>
