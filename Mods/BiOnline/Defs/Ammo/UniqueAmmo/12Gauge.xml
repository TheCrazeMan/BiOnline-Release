	<ThingDef ParentName="Base12GaugeBullet">
		<defName>Bullet_12Gauge_Flechette</defName>
		<label>flechette</label>
		<graphicData>
			<texPath>Things/Projectile/Shotgun_Pellet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>100</speed>
			<damageAmountBase>13</damageAmountBase>
			<pelletCount>6</pelletCount>
			<armorPenetrationSharp>6.5</armorPenetrationSharp>
			<armorPenetrationBlunt>8.52</armorPenetrationBlunt>
			<casingMoteDefname>Fleck_ShotgunShell_White</casingMoteDefname>
			<casingFilthDefname>Filth_ShotgunAmmoCasings_White</casingFilthDefname>			
			<spreadMult>3.8</spreadMult>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base12GaugeBullet">
