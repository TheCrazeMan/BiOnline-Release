	<!-- ThingDef base -->
	
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="AmmoBase" Name="PMCShellBase" Abstract="True">
		<graphicData>
			<texPath>Things/Ammo/Recoilless/HEDP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<stackLimit>200</stackLimit>
		<ammoClass>HEBolts</ammoClass>
		<menuHidden>False</menuHidden>
		<destroyOnDrop>False</destroyOnDrop>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>0.5</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveExpandPerStackcount>0.033</explosiveExpandPerStackcount>
				<startWickHitPointsPercent>0.33</startWickHitPointsPercent>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
				<explodeOnKilled>True</explodeOnKilled>
				<wickTicks>60~90</wickTicks>
			</li>
		</comps>
		<thingCategories>
			<li>AmmoPMC</li>
		</thingCategories>		
		<tradeTags Inherit="False">
			<li>CE_AmmoInjector</li>
			<li>CE_Ammo</li>		
			<li>CE_AutoEnableTrade_Sellable</li>
		</tradeTags>		
	</ThingDef>

