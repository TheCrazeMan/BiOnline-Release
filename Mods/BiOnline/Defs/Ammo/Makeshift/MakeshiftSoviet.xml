<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoMakeshiftSoviet</defName>
      <label>MakeshiftSoviet</label>
      <parent>AmmoRifles</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberRifle</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_MakeshiftSoviet</defName>
    <label>MakeshiftSoviet</label>
    <ammoTypes>
      <Ammo_MakeshiftSoviet>Bullet_MakeshiftSoviet</Ammo_MakeshiftSoviet>
    </ammoTypes>
		<similarTo>AmmoSet_RifleIntermediate</similarTo>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="MakeshiftSovietBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>Ancient makeshift rifle cartridge.</description>
    <statBases>
	  <Mass>0.023</Mass>
	  <Bulk>0.1</Bulk>
    </statBases>
	<tradeTags>
	  <li>CE_AutoEnableCrafting</li>
	</tradeTags>
    <thingCategories>
      <li>AmmoMakeshiftSoviet</li>
    </thingCategories>
    <stackLimit>5000</stackLimit>
  </ThingDef>
  
  <ThingDef Class="CombatExtended.AmmoDef" ParentName="MakeshiftSovietBase">
    <defName>Ammo_MakeshiftSoviet</defName>
    <label>MakeshiftSoviet cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Rifle/FMJ</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.12</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
    <tradeTags>
      <li>CE_AutoEnableCrafting_CraftingSpot</li>
	  <li>CE_AutoEnableCrafting_TribalBench</li>
    </tradeTags>
    <cookOffProjectile>Bullet_MakeshiftSoviet</cookOffProjectile>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

	<ThingDef Name="BaseMakeshiftSovietBullet" ParentName="BaseBulletCE" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>144</speed>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>
	
	<ThingDef ParentName="BaseMakeshiftSovietBullet">
		<defName>Bullet_MakeshiftSoviet</defName>
		<label>Makeshift Soviet</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>17</damageAmountBase>
			<armorPenetrationSharp>6</armorPenetrationSharp>
			<armorPenetrationBlunt>41.98</armorPenetrationBlunt>
		</projectile>
	</ThingDef>
  
	<!-- ==================== Recipes ========================== -->
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_MakeshiftSoviet</defName>
    <label>Make MakeshiftSoviet cartridge x200</label>
    <description>Craft 200 MakeshiftSoviet cartridges.</description>
    <jobString>Making MakeshiftSoviet cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>12</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_MakeshiftSoviet>300</Ammo_MakeshiftSoviet>
    </products>
    <workAmount>1200</workAmount>
	<researchPrerequisite>NakedBrutality</researchPrerequisite>
  </RecipeDef>
	
</Defs>