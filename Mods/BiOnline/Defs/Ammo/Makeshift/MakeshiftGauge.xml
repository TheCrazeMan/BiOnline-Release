      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_MakeshiftGauge_Buck>200</Ammo_MakeshiftGauge_Buck>
    </products>
    <workAmount>1200</workAmount>
	<researchPrerequisite>NakedBrutality</researchPrerequisite>
  </RecipeDef>

