<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoMakeshiftMagnum</defName>
      <label>MakeshiftMagnum</label>
      <parent>AmmoPistols</parent>
      <iconPath>UI/Icons/ThingCategories/Ammo</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_MakeshiftMagnum</defName>
    <label>MakeshiftMagnum</label>
    <ammoTypes>
      <Ammo_MakeshiftMagnum>Bullet_MakeshiftMagnum</Ammo_MakeshiftMagnum>
    </ammoTypes>
	<similarTo>AmmoSet_Pistol</similarTo>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="MakeshiftMagnumBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>Ancient makeshift revolver cartridge.</description>
    <statBases>
	  <Mass>0.023</Mass>
	  <Bulk>0.1</Bulk>
    </statBases>
	<tradeTags>
	  <li>CE_AutoEnableCrafting</li>
	</tradeTags>
    <thingCategories>
      <li>AmmoMakeshiftMagnum</li>
    </thingCategories>
    <stackLimit>5000</stackLimit>
  </ThingDef>
  
  <ThingDef Class="CombatExtended.AmmoDef" ParentName="MakeshiftMagnumBase">
    <defName>Ammo_MakeshiftMagnum</defName>
    <label>MakeshiftMagnum cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Pistol/FMJ</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.12</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
    <tradeTags>
      <li>CE_AutoEnableCrafting_CraftingSpot</li>
	  <li>CE_AutoEnableCrafting_TribalBench</li>
    </tradeTags>
    <cookOffProjectile>Bullet_MakeshiftMagnum</cookOffProjectile>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

	<ThingDef Name="BaseMakeshiftMagnumBullet" ParentName="BaseBulletCE" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>78</speed>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>
	
	<ThingDef ParentName="BaseMakeshiftMagnumBullet">
		<defName>Bullet_MakeshiftMagnum</defName>
		<label>Makeshift Magnum</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>15</damageAmountBase>
			<armorPenetrationSharp>7</armorPenetrationSharp>
			<armorPenetrationBlunt>23.98</armorPenetrationBlunt>
		</projectile>
	</ThingDef>
  
	<!-- ==================== Recipes ========================== -->
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_MakeshiftMagnum</defName>
    <label>Make MakeshiftMagnum cartridge x200</label>
    <description>Craft 200 MakeshiftMagnum cartridges.</description>
    <jobString>Making MakeshiftMagnum cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>12</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_MakeshiftMagnum>200</Ammo_MakeshiftMagnum>
    </products>
    <workAmount>1200</workAmount>
	<researchPrerequisite>NakedBrutality</researchPrerequisite>
  </RecipeDef>
	
</Defs>