<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>T_BioferriteDecay</defName>
    <label>Bioferrite Contamination</label>
    <description>Rash like contamination caused by attacks of bioferrite based creatures. The claws and teeth of many such creatures cause this affliction even without causing significant damage.
\nAt high doses, this contamination renders a creature's carapace and body vulnerable to attack and causes breakdown in bodily function. 
\nEven at low doses, it can cause mental breakdowns in those affected. Psychic in nature, inanimate objects and psychially deaf individuals are not affected.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1.0, 1.0, 0.7)</defaultLabelColor>
    <maxSeverity>1.5</maxSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.4</severityPerDay>
      </li>
      <li Class="HediffCompProperties_SurgeryInspectable">
        <surgicalDetectionDesc>{PAWN_nameDef} is showing early signs of bioferrite contamination. Keep {PAWN_objective} away from hostile anomalies.</surgicalDetectionDesc>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
		<statFactors>
          <ArmorRating_Sharp>0.95</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.95</ArmorRating_Blunt>
          <ArmorRating_Heat>0.95</ArmorRating_Heat>
        </statFactors>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
		<socialFightChanceFactor>2.0</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
		<statFactors>
          <ArmorRating_Sharp>0.80</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.80</ArmorRating_Blunt>
          <ArmorRating_Heat>0.80</ArmorRating_Heat>
        </statFactors>
        <mentalStateGivers>
          <li>
            <mentalState>TerrifyingHallucinations</mentalState>
            <mtbDays>8</mtbDays>
          </li>
		  <li>
            <mentalState>InsaneRamblings</mentalState>
            <mtbDays>4</mtbDays>
          </li>
		  <li>
            <mentalState>BerserkShort</mentalState>
            <mtbDays>1.6</mtbDays>
          </li>
		  <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>40</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
		<socialFightChanceFactor>4.0</socialFightChanceFactor>
        <vomitMtbDays>1</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
		<statFactors>
          <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
          <ArmorRating_Heat>0.60</ArmorRating_Heat>
        </statFactors>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>Carcinoma</hediff>
            <mtbDays>20</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
        <mentalStateGivers>
          <li>
            <mentalState>TerrifyingHallucinations</mentalState>
            <mtbDays>6</mtbDays>
          </li>
		  <li>
            <mentalState>InsaneRamblings</mentalState>
            <mtbDays>3</mtbDays>
          </li>
		  <li>
            <mentalState>BerserkShort</mentalState>
            <mtbDays>1.2</mtbDays>
          </li>
		  <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>30</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
		<socialFightChanceFactor>6.0</socialFightChanceFactor>
        <vomitMtbDays>0.75</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
		<statFactors>
          <ArmorRating_Sharp>0.40</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
          <ArmorRating_Heat>0.40</ArmorRating_Heat>
        </statFactors>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>Carcinoma</hediff>
            <mtbDays>5</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
        <mentalStateGivers>
          <li>
            <mentalState>TerrifyingHallucinations</mentalState>
            <mtbDays>4</mtbDays>
          </li>
		  <li>
            <mentalState>InsaneRamblings</mentalState>
            <mtbDays>2</mtbDays>
          </li>
		  <li>
            <mentalState>BerserkShort</mentalState>
            <mtbDays>0.8</mtbDays>
          </li>
		  <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>20</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>
		<socialFightChanceFactor>8.0</socialFightChanceFactor>
        <vomitMtbDays>0.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
		<statFactors>
          <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
          <ArmorRating_Heat>0.20</ArmorRating_Heat>
        </statFactors>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>Carcinoma</hediff>
            <mtbDays>1.25</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
        <mentalStateGivers>
          <li>
            <mentalState>TerrifyingHallucinations</mentalState>
            <mtbDays>2</mtbDays>
          </li>
		  <li>
            <mentalState>InsaneRamblings</mentalState>
            <mtbDays>1</mtbDays>
          </li>
		  <li>
            <mentalState>BerserkShort</mentalState>
            <mtbDays>0.4</mtbDays>
          </li>
		  <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>10</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
	  <li>
        <label>total</label>
        <minSeverity>1</minSeverity>
		<socialFightChanceFactor>10.0</socialFightChanceFactor>
        <vomitMtbDays>0.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
		<statFactors>
          <ArmorRating_Sharp>0</ArmorRating_Sharp>
          <ArmorRating_Blunt>0</ArmorRating_Blunt>
          <ArmorRating_Heat>0</ArmorRating_Heat>
        </statFactors>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>OrganDecay</hediff>
            <mtbDays>4</mtbDays>
            <partsToAffect>
              <li>Heart</li>
              <li>Lung</li>
              <li>Kidney</li>
            </partsToAffect>
          </li>
            <li Class="HediffGiver_Random">
              <hediff>CrumblingMind</hediff>
              <mtbDays>3</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>CatatonicBreakdown</hediff>
              <mtbDays>1</mtbDays>
            </li>
          <li Class="HediffGiver_Random">
            <hediff>Carcinoma</hediff>
            <mtbDays>0.5</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
        <mentalStateGivers>
          <li>
            <mentalState>TerrifyingHallucinations</mentalState>
            <mtbDays>1</mtbDays>
          </li>
		  <li>
            <mentalState>InsaneRamblings</mentalState>
            <mtbDays>0.5</mtbDays>
          </li>
		  <li>
            <mentalState>BerserkShort</mentalState>
            <mtbDays>0.2</mtbDays>
          </li>
		  <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>5</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>T_FleshbeastRegeneration</defName>
    <label>flesh regeneration</label>
    <description>Rapid regeneration caused by a abberant spike in the fleshbeast's metabolism.</description>
    <scenarioCanAdd>false</scenarioCanAdd>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1.0, 1.0, 1.0)</defaultLabelColor>
    <initialSeverity>1</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-40</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>regenerating</label>
		<becomeVisible>false</becomeVisible>
        <regeneration>1000</regeneration>
        <showRegenerationStat>false</showRegenerationStat>
		<painFactor>0.25</painFactor>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>T_EMPArchiteSurge</defName>
    <label>Archite Surge</label>
    <description>A spike in activity of resurrection archites as a result of being struck by a intense electromagnetic shock. They will rapidly rebuild damaged tissue as a result and increase it's strength but the active archites are far more susceptible to damage.</description>
    <scenarioCanAdd>false</scenarioCanAdd>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1.0, 1.0, 1.0)</defaultLabelColor>
    <initialSeverity>1</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_Effecter">
        <stateEffecter>GhoulFrenzy</stateEffecter>
      </li>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-40</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>regenerating</label>
		<becomeVisible>true</becomeVisible>
        <regeneration>250</regeneration>
        <showRegenerationStat>false</showRegenerationStat>
		<damageFactors>
			<EMP>0</EMP>
		</damageFactors>
        <statOffsets>
          <MoveSpeed>2</MoveSpeed>
        </statOffsets>
		<statFactors>
			<MeleeDamageFactor>1.5</MeleeDamageFactor>
			<IncomingDamageFactor>3</IncomingDamageFactor>
			<MeleeCooldownFactor>0.5</MeleeCooldownFactor>
		</statFactors>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>0.45</offset>
            </li>
            <li>
              <capacity>Moving</capacity>
              <offset>0.50</offset>
            </li>
          </capMods>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>T_AnomalyPainresist</defName>
    <label>pain resistance</label>
    <description>Reduced pain from anomalous nature.</description>
    <scenarioCanAdd>false</scenarioCanAdd>
    <hediffClass>Hediff</hediffClass>
    <defaultLabelColor>(1.0, 1.0, 1.0)</defaultLabelColor>
    <initialSeverity>1</initialSeverity>
    <stages>
      <li>
	    <becomeVisible>false</becomeVisible>
		<painFactor>0.50</painFactor>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>T_AnomalyPainblock</defName>
    <label>pain resistance</label>
    <description>Reduced pain from anomalous nature.</description>
    <scenarioCanAdd>false</scenarioCanAdd>
    <hediffClass>Hediff</hediffClass>
    <defaultLabelColor>(1.0, 1.0, 1.0)</defaultLabelColor>
    <initialSeverity>1</initialSeverity>
    <stages>
      <li>
	    <becomeVisible>false</becomeVisible>
		<painFactor>0.10</painFactor>
      </li>
    </stages>
  </HediffDef>
  
  <DamageDef ParentName="Scratch">
    <defName>T_ScratchBioferrite</defName>
    <label>contaminated scratch</label>
    <additionalHediffs>
      <li>
        <hediff>T_BioferriteDecay</hediff>
        <severityPerDamageDealt>0.015</severityPerDamageDealt>
        <victimSeverityScaling>PsychicSensitivity</victimSeverityScaling>
		<severityFixed>0.01</severityFixed>
        <victimSeverityScalingByInvBodySize>true</victimSeverityScalingByInvBodySize>
      </li>
    </additionalHediffs>
    <applyAdditionalHediffsIfHuntingForFood>false</applyAdditionalHediffsIfHuntingForFood>
    <impactSoundType>Toxic</impactSoundType>
    <damageEffecter>Impact_Toxic</damageEffecter>
  </DamageDef>

  <DamageDef ParentName="Bite">
    <defName>T_BiteBioferrite</defName>
    <label>contaminated bite</label>
    <additionalHediffs>
      <li>
        <hediff>T_BioferriteDecay</hediff>
        <severityPerDamageDealt>0.015</severityPerDamageDealt>
        <victimSeverityScaling>PsychicSensitivity</victimSeverityScaling>
		<severityFixed>0.02</severityFixed>
        <victimSeverityScalingByInvBodySize>true</victimSeverityScalingByInvBodySize>
      </li>
    </additionalHediffs>
    <applyAdditionalHediffsIfHuntingForFood>false</applyAdditionalHediffsIfHuntingForFood>
    <impactSoundType>Toxic</impactSoundType>
    <damageEffecter>Impact_Toxic</damageEffecter>
  </DamageDef>
  
